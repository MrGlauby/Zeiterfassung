{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zeiterfassung/ui": ["libs/shared/ui/src/index.ts"],
      "@zeiterfassung/user-create-modal": [
        "libs/zeiterfassung/user-create-modal/src/index.ts"
      ],
      "@zeiterfassung/user-list-data-access": [
        "libs/zeiterfassung/user-list-data-access/src/index.ts"
      ],
      "@zeiterfassung/user-list-feature": [
        "libs/zeiterfassung/user-list-feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
